<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rickmorty"
        android:scaleType="centerCrop"
        android:src="@drawable/rickmorty"
        tools:layout_editor_absoluteY="452dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7000"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/index_title_1"
            style="@style/TextBigWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/index_title_1" />

        <TextView
            android:id="@+id/index_title_2"
            style="@style/TextMediumWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/index_title_2" />

        <TextView
            android:id="@+id/index_title_3"
            style="@style/TextMediumWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/index_title_3" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="goBody"
            android:text="@string/index_button" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
